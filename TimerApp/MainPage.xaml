<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TimerApp"
             x:Class="TimerApp.MainPage">

    <ContentPage.BindingContext>
        <local:TimerViewModel />
    </ContentPage.BindingContext>

    <Grid VerticalOptions="Center" HorizontalOptions="Center">
        <VerticalStackLayout Spacing="20" Padding="20">
              <!--analog clock-->
              <Grid WidthRequest="200" HeightRequest="200" HorizontalOptions="Center">
                <Ellipse Stroke="Black"
                         StrokeThickness="5"
                         Fill="White"/>
                
                <Line X1="100" Y1="10" 
                      X2="100" Y2="30"
                      Stroke="Black"
                      StrokeThickness="3"/>
                <Line X1="170" Y1="100"
                      X2="190" Y2="100"
                      Stroke="Black"
                      StrokeThickness="3"/>
                <Line X1="100" Y1="170"
                      X2="100" Y2="190"
                      Stroke="Black"
                      StrokeThickness="3"/>
                <Line X1="10" Y1="100"
                      X2="30" Y2="100"
                      Stroke="Black"
                      StrokeThickness="3"/>

                <!--hands-->  
                <Grid WidthRequest="200" HeightRequest="200" HorizontalOptions="Center" VerticalOptions="Center">
                <Line X1="100" Y1="100"
                       X2="100" Y2="60"
                       Stroke="Black"
                       StrokeThickness="4"
                       AnchorX="0.5"
                       AnchorY="0.5"
                       Rotation="{Binding HourHandAngle}" />
                <Line X1="100" Y1="100"
                       X2="100" Y2="40"
                       Stroke="Black"
                       StrokeThickness="2"
                       AnchorX="0.5"
                       AnchorY="0.5"
                       Rotation="{Binding MinuteHandAngle}" />
                <Line X1="100" Y1="100"
                       X2="100" Y2="30"
                       Stroke="Red"
                       StrokeThickness="1"
                       AnchorX="0.5"
                       AnchorY="0.5"
                       Rotation="{Binding SecondHandAngle}" />
                </Grid>

                      
                <Ellipse Fill="Black"
                         WidthRequest="8"
                         HeightRequest="8"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"/>
            </Grid>

            <!--time input-->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" 
                                 IsEnabled="{Binding CanSetTime}">
                <Entry Text="{Binding Hours}" 
                       Keyboard="Numeric"
                       WidthRequest="60"
                       MaxLength="2"
                       Placeholder="hh"/>
                <Label Text=":" 
                       VerticalOptions="Center"/>
                <Entry Text="{Binding Minutes}" 
                       Keyboard="Numeric"
                       WidthRequest="60"
                       MaxLength="2"
                       Placeholder="mm"/>
                <Label Text=":" 
                       VerticalOptions="Center"/>
                <Entry Text="{Binding Seconds}" 
                       Keyboard="Numeric"
                       WidthRequest="60"
                       MaxLength="2"
                       Placeholder="ss"/>
            </HorizontalStackLayout>

            <!--timer display-->
            <Label Text="{Binding DisplayTime}" 
                   FontSize="48" 
                   HorizontalOptions="Center" 
                   FontFamily="Monospace"/>

            <!--buttons-->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="Start" 
                        Command="{Binding StartCommand}"
                        WidthRequest="100"/>
                <Button Text="Stop" 
                        Command="{Binding StopCommand}"
                        WidthRequest="100"/>
                <Button Text="Reset" 
                        Command="{Binding ResetCommand}"
                        WidthRequest="100"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>